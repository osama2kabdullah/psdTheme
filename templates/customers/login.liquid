<br>
<h1 class="text-center">Login</h1>
<br>
{% form 'customer_login' %}
  {{ form.errors | default_errors }}
  <div class="d-grid gap-3 w-50 mx-auto">
    <div class="form-group">
      <label for="inputEmail">Email</label>
      <input type="email" name="customer[email]" class="form-control" id="inputEmail" placeholder="Email">
    </div>

    <div class="form-group">
      <label for="inputPassword">Password</label>
      <input type="password" name="customer[password]" class="form-control" id="inputPassword" placeholder="Password">
    </div>

    <div style="width: min-content" class="mx-auto">
      <input class="btn btn-primary" type="submit" value="Sign in">
    </div>
  </div>
{% endform %}
